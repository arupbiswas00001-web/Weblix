<body>
    <h1>Weblix</h1>
    <p>Welcome to your digital link hub. Click to explore and help us track engagement!</p>
    
    <div class="container">
        <!-- Link Cards (Edit here to add more links) -->
        <div class="link-card">
            <h3>Example Link 1</h3>
            <p>Description: Visit this page and sign up.</p>
            <a href="#" onclick="trackClick('link1', 'https://example.com')">Tap Here</a>
        </div>
        <div class="link-card">
            <h3>Example Link 2</h3>
            <p>Description: Check out this resource.</p>
            <a href="#" onclick="trackClick('link2', 'https://another-example.com')">Tap Here</a>
        </div>
        <!-- Add more cards as needed -->
    </div>
    
    <div class="stats">
        <p>Total Clicks: <span id="totalClicks">0</span></p>
        <p>Link 1 Clicks: <span id="link1Clicks">0</span> | Link 2 Clicks: <span id="link2Clicks">0</span></p>
    </div>

    <script>
        // Basic click tracking (secure: no external data leaks, uses local storage)
        let clickData = JSON.parse(localStorage.getItem('weblixClicks')) || { total: 0, link1: 0, link2: 0 };
        
        function trackClick(linkId, url) {
            // Sanitize: Ensure URL is valid (basic check)
            if (!url.startsWith('http')) return;
            
            // Log click
            clickData.total++;
            clickData[linkId]++;
            localStorage.setItem('weblixClicks', JSON.stringify(clickData));
            
            // Update display
            document.getElementById('totalClicks').textContent = clickData.total;
            document.getElementById('link1Clicks').textContent = clickData.link1;
            document.getElementById('link2Clicks').textContent = clickData.link2;
            
            // Redirect (secure: prevents XSS by not injecting user input)
            window.location.href = url;
        }
        
        // Load initial stats on page load
        window.onload = function() {
            document.getElementById('totalClicks').textContent = clickData.total;
            document.getElementById('link1Clicks').textContent = clickData.link1;
            document.getElementById('link2Clicks').textContent = clickData.link2;
        };
    </script>
